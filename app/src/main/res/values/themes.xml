<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WeightLogger" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>

        <!-- Custom attributes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.WeightTracker.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.WeightTracker.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.WeightTracker.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.WeightTracker.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.WeightTracker.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.WeightTracker.Caption</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.WeightTracker.Button</item>
        <item name="textInputStyle">@style/Widget.WeightTracker.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.WeightTracker.CardView</item>
    </style>
</resources>